<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".books.detail_book">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:background="@color/bleureader">
            <ImageView
                android:id="@+id/retor"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_arrow_back_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:text="BE READER"/>
        </LinearLayout>
        <LinearLayout

            android:layout_margin="10dp"


            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/iconbook"

                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/false1"
                />
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <TextView
                    android:id="@+id/titlebook"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Name"/>
                <TextView
                    android:id="@+id/subtitlebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titlebook"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/layout0"
                    android:layout_marginBottom="20dp"
                    android:gravity="bottom"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/subtitlebook"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="authors :"
                        android:layout_marginRight="10dp"
                        />
                    <TextView
                        android:id="@+id/author"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="author"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_rating"
                android:elevation="8dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".25"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/star_rating0"
                        android:layout_width="80dp"
                        android:layout_gravity="center"
                        android:layout_height="65dp"
                        android:src="@drawable/ic_baseline_star_outline_24"/>

                    <TextView
                        android:id="@+id/rating"
                        android:layout_gravity="center"
                        android:textSize="28dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="4"
                        android:text="3.0"/>
                    <TextView
                        android:id="@+id/ratingCount"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".25"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:rotationX="0">

                    <ImageView
                        android:id="@+id/star_rating1"
                        android:layout_width="80dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:src="@drawable/google_books_logo" />

                    <TextView
                        android:id="@+id/rating_google"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0.0"
                        android:textSize="28dp" />

                    <TextView
                        android:id="@+id/ratingCount_google"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"


                        android:text="0" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".25"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/add_myrating"
                        android:layout_width="55dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:src="@drawable/add_stars" />

                    <TextView
                        android:id="@+id/text_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:text="add rating"
                        android:textSize="20dp"
                        android:ellipsize="marquee" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".25"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/add_mylist"
                        android:layout_width="80dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_add_24" />

                    <TextView
                        android:id="@+id/type_of_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:text="My List"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:id="@+id/desc_layout"
                android:padding="20dp"
                android:layout_below="@+id/layout_rating"
                android:orientation="vertical"
                android:background="@drawable/back_ground"
                android:elevation="6dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Description : " />



                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="--" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@drawable/back_ground"
                android:elevation="6dp"
                android:padding="10dp"
                android:layout_below="@+id/desc_layout"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="categories : "/>
                    <TextView
                        android:id="@+id/categories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/layout1"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Language : "
                        />
                    <TextView
                        android:id="@+id/language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/ISBN13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ISBN13 : "/>
                    <TextView
                        android:id="@+id/ISBN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Publisher : "/>
                    <TextView
                        android:id="@+id/publisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Published Date : "/>
                    <TextView
                        android:id="@+id/publisherDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                     <TextView
                         android:id="@+id/pages"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"

                         android:layout_gravity="center"

                         android:text="pages :" />
                 </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_below="@+id/detail_layout"


                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:text="comment :"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <ImageView
                            android:id="@+id/newcomment"
                            android:layout_width="40dp"
                            android:layout_gravity="right"
                            android:layout_height="30dp"
                            android:background="@drawable/back_ground"
                            android:elevation="3dp"
                            android:src="@drawable/ic_baseline_add_24"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/barcomment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_ground"
                    android:elevation="10dp"
                    android:visibility="gone"
                    >
                <EditText
                    android:id="@+id/tapcomment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:padding="10dp"
                    android:hint="comment..."

                    />
                    <LinearLayout
                        android:layout_weight="0.1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/addcomment"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="40dp"

                            android:src="@drawable/ic_baseline_add_circle_outline_24"
                            />
                        <ImageView
                            android:id="@+id/cancelcomment"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="40dp"

                            android:src="@drawable/ic_baseline_cancel_24"
                            />

                    </LinearLayout>


                </LinearLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_of_commentaire"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp" />


            </LinearLayout>




        </RelativeLayout>

    </LinearLayout>


</ScrollView>